{
    "python.analysis.typeCheckingMode": "basic",
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "200"
    ],
    "pylint.args": [
        "--max-line-length",
        "200"
    ],
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
}